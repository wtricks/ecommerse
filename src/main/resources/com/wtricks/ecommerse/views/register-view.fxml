<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="TOP_CENTER" prefHeight="600.0" prefWidth="300.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wtricks.ecommerse.controllers.RegisterView">
    <children>
        <ImageView fitHeight="72.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER">
            <image>
                <Image url="@../assets/logo1.png" />
            </image>
            <GridPane.margin>
                <Insets top="112.0" />
            </GridPane.margin>
        </ImageView>
        <Label text="Let's Get Started" textFill="#0c232f" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Label>
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="169.0" text="Create a new account" textFill="#a9aaab" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        <Label fx:id="label" text="" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets top="12.0" />
            </GridPane.margin></Label>
        <TextField fx:id="name" prefHeight="40.0" prefWidth="260.0" promptText="Full name" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets top="12.0" />
            </GridPane.margin>
        </TextField>
        <TextField fx:id="email" prefHeight="40.0" prefWidth="260.0" promptText="Your Email" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </TextField>
        <PasswordField fx:id="pass" prefHeight="40.0" prefWidth="260.0" promptText="Password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </PasswordField>
        <PasswordField fx:id="cpass" prefHeight="40.0" prefWidth="260.0" promptText="Confirm Password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </PasswordField>
        <Button mnemonicParsing="false" onAction="#doRegister" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #40bfff;" text="Get Started" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="8">
            <GridPane.margin>
                <Insets top="20.0" />
            </GridPane.margin>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <style>
                .button:pressed {
                -fx-opacity: 0.8;
                }
            </style>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button mnemonicParsing="false" onAction="#goLoginPage" prefHeight="12.0" prefWidth="260.0" style="-fx-background-color: transparent;" text="LogIn" textFill="#40bfff" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="9">
            <GridPane.margin>
                <Insets top="25.0" />
            </GridPane.margin>
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
            <graphic>
                <Label text="Already have account?" />
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
    </rowConstraints>
</GridPane>
